<launch>
  <arg name="test_case" default="minimal" />

  <node pkg="capabilities" name="capability_server" type="capability_server" output="screen" required="true" launch-prefix="cd $(find capabilities) coverage run --include=$(find capabilities)/src/capabilities --append ">
    <env name="ROS_PACKAGE_PATH"
         value="$(find capabilities)/test/unit/discovery_workspaces/$(arg test_case):$(env ROS_PACKAGE_PATH)" />
  </node>
  <test test-name="demo" pkg="capabilities" type="demo.py" />
</launch>
